<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NumButton">
        <item name="android:background">@color/colorNumButton</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">-3dp</item>
        <item name="android:layout_marginRight">-3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">40dp</item>
    </style>

    <style name="OpButton">
        <item name="android:background">@color/colorOpButton</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">-3dp</item>
        <item name="android:layout_marginRight">-3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">40dp</item>

    </style>

    <style name="ClearButton">
        <item name="android:background">@color/colorClearButton</item>
        <!--<item name="android:background">@drawable/roundedbutton</item>-->
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">-3dp</item>
        <item name="android:layout_marginRight">-3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">20dp</item>

    </style>

    <style name="EqualButton">
        <item name="android:background">@color/colorEqualButton</item>
        <item name="android:layout_marginTop">-5dp</item>
        <item name="android:layout_marginBottom">-5dp</item>
        <item name="android:layout_marginLeft">-3dp</item>
        <item name="android:layout_marginRight">-3dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">0.25</item>
        <item name="android:textSize">40dp</item>
    </style>

</resources>
