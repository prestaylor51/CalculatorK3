<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taylor.preston.calculatork3.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_marginTop="-10dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="0dp"
        android:id="@+id/linearLayout4"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button0"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_0"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/buttonAdd"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleOperator"
            android:text="@string/button_add"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/buttonsSub"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:onClick="handleOperator"
            android:text="@string/button_sub"
            android:layout_weight="0.25"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/buttonEqual"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="evaluateEquation"
            android:textSize="40dp"
            android:text="@string/button_equal" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_marginBottom="0dp"
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_1"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_2"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_3"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/buttonDiv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleOperator"
            android:text="@string/button_div"
            android:textSize="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button4"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_4"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_5"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button6"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_6"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/buttonMult"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleOperator"
            android:text="@string/button_mult"
            android:textSize="40dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button7"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_7"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button8"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_8"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            android:id="@+id/button9"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="handleButton"
            android:text="@string/button_9"
            android:textSize="40dp"/>

        <Button
            android:layout_marginBottom="-5dp"
            android:layout_marginTop="-5dp"
            android:layout_marginLeft="-3dp"
            android:layout_marginRight="-3dp"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:id="@+id/buttonClear"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.25"
            android:onClick="clearEquation"
            android:text="@string/button_clear"
            android:textSize="21dp"/>
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="63dp"
        android:text=""
        android:layout_marginBottom="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        android:layout_marginRight="0dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="50dp"/>
</android.support.constraint.ConstraintLayout>
