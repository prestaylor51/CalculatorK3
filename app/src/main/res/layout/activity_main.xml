<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.taylor.preston.calculatork3.MainActivity"
    tools:layout_editor_absoluteY="81dp"
    tools:layout_editor_absoluteX="0dp">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:weightSum="1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:id="@+id/linearLayout4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            style="@style/NumButton"
            android:id="@+id/button0"
            android:onClick="handleButton"
            android:text="@string/button_0"
            />

        <Button
            style="@style/OpButton"
            android:id="@+id/buttonAdd"
            android:onClick="handleOperator"
            android:text="@string/button_add"
            />

        <Button
            style="@style/OpButton"
            android:id="@+id/buttonsSub"
            android:onClick="handleOperator"
            android:text="@string/button_sub"
            />

        <Button
            style="@style/EqualButton"
            android:id="@+id/buttonEqual"
            android:onClick="evaluateEquation"
            android:text="@string/button_equal"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout4"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            style="@style/NumButton"
            android:id="@+id/button1"
            android:onClick="handleButton"
            android:text="@string/button_1"
            />

        <Button
            style="@style/NumButton"
            android:id="@+id/button2"
            android:onClick="handleButton"
            android:text="@string/button_2"
            />

        <Button
            style="@style/NumButton"
            android:id="@+id/button3"
            android:onClick="handleButton"
            android:text="@string/button_3"
            />

        <Button
            style="@style/OpButton"
            android:id="@+id/buttonDiv"
            android:onClick="handleOperator"
            android:text="@string/button_div"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout2"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout3"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            style="@style/NumButton"
            android:id="@+id/button4"
            android:onClick="handleButton"
            android:text="@string/button_4"
           />

        <Button
            style="@style/NumButton"
            android:id="@+id/button5"
            android:onClick="handleButton"
            android:text="@string/button_5"
            />

        <Button
            style="@style/NumButton"
            android:id="@+id/button6"
            android:onClick="handleButton"
            android:text="@string/button_6"
           />

        <Button
            style="@style/OpButton"
            android:id="@+id/buttonMult"
            android:onClick="handleOperator"
            android:text="@string/button_mult"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:id="@+id/linearLayout"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout2"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent">

        <Button
            style="@style/NumButton"
            android:id="@+id/button7"
            android:onClick="handleButton"
            android:text="@string/button_7"
           />

        <Button
            style="@style/NumButton"
            android:id="@+id/button8"
            android:onClick="handleButton"
            android:text="@string/button_8"
            />

        <Button
            style="@style/NumButton"
            android:id="@+id/button9"
            android:onClick="handleButton"
            android:text="@string/button_9"
            />

        <Button
            style="@style/ClearButton"
            android:id="@+id/buttonClear"
            android:onClick="clearEquation"
            android:text="@string/button_clear"
            />
    </LinearLayout>

    <TextView
        android:id="@+id/textView"
        android:layout_width="0dp"
        android:layout_height="63dp"
        android:text=""
        app:layout_constraintBottom_toTopOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:textSize="50dp"/>
</android.support.constraint.ConstraintLayout>
